rules_version='2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Users can read and write their own userPlants subcollection
      match /userPlants/{plantId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow authenticated users to read and write plant collections
    match /plants/{plantId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write user inventories
    match /inventories/{inventoryId} {
      allow read, write: if request.auth != null;
    }
    
    // Temporary: Allow all authenticated users to read/write for development
    // TODO: Implement proper security rules before production
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
